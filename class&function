function study($i)
{
    $t = $i;//지역 변수
    echo "<table border = '1';>";
    echo "<tr>";
    echo "<td>".$t."</td>";
    echo "</tr>";
    echo "</table>";
}
function clas($i)
{
    global $title;//전역변수를 그대로 사용
    echo "<table border = '1';>";
    echo "<tr>";
    echo "<td>".$title."</td>";
    echo "</tr>";
    echo "</table>";
}
function sum($a =0, $b=0)
{
    return $a+$b; //전달만 함
}

$list=array
(
    "가"=> "수학",
    "나"=> "과학",
    "다"=> "영어"
);
foreach($list as $value)
{
    study($value);
    clas($value);
}

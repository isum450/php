function sum($i = 0, $k = 0, $l =0){
    $sum= $i + $k + $l;
    return $sum;
}
function minus($i = 0, $k = 0, $l =0){
    $minus= $i - $k - $l;
    return $minus;
}
function multiply($i = 0, $k = 0, $l =0){
    $multiply= $i * $k * $l;
    return $multiply;
}
function divide($i = 0, $k = 0, $l =0){
    $divide= $i / $k / $l;
    return $divide;s
}

echo sum(1, 2, 3);
echo "<br/>";
echo minus(10, 4, 3);
echo "<br/>";
echo multiply(3, 4, 3);
echo "<br/>";
echo divide(8, 2, 2);




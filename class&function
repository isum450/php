//class(객체)

/*
class = 자동차
function = 부품

class 클래스명{
    public function 함수명1(){
        외부에서 접근 가능한 함수
        $this -> 함수2();
    }
    private function 함수명2(){
        외부에서 접근할 수 없는 함수
        $this -> 함수1();
    }
    protected function 함수명(){
        내부와 상속받은 클래스에서 접근할 수 있다.
    }
}

클래스를 사용하는 법
$car = new 클래스명();
$car->함수2()

class Car{
    private $_carname;
    public $contury;
    
    public function number(){
        echo "자동차 번호는 **입니다.";
    }
    public function license(){
        return "홍길동 면허";
    }
    private function car_name(){
        if($this -> _carname == ""){
            $this ->_carname = "이름없는 자동차";
        }
        return $this -> _carname;
    }
    public function brand($car_name =""){
        return $this -> _carname = $car_name;//this 는 이 클래스 자체를 지정.
    }
}

$CAR = new car();

echo $CAR -> license();
echo "</br>";

echo $CAR -> brand("아이소닉");
$CAR ->contury = "미국";
echo $CAR->contury;
